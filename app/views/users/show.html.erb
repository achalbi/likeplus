              <h5>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= check_box_tag 'moody', true , @my_badges.include?('moody') %> Moody</h5>
              <h5>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= check_box_tag 'kind', true , @my_badges.include?('kind') %> Kind</h5>
              <h5>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<%= check_box_tag 'stingy', true , @my_badges.include?('stingy') %> Stingy</h5>

            </div>
          <!-- </form> -->
      </div>
      <div class="modal-footer">
          <div>
          <%= submit_tag "Save", class: "btn btn-primary btn-sm", 'aria-hidden'=>"true", id: "badges_submit" %> 
          
          </div>  
      </div>
  </div>
</div>
</div>
<% end %>


